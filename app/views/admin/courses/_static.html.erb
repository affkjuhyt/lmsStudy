<div class="card">
  <div class="card-header">
      <h3 class="card-title"><%= t('admin.project.projects')%></h3>

      <div class="card-tools">
      <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
          <i class="fas fa-minus"></i></button>
      <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
          <i class="fas fa-times"></i></button>
      </div>
  </div>

  <div class="card-body p-0">
    <table class="table table-striped projects">
        <thead>
            <tr>
                <th style="width: 20%">
                     <%= t('admin.project.name') %>
                </th>
                <th>
                    <%= t('admin.project.progress') %>
                </th>
                <th style="width: 8%" class="text-center">
                </th>
                <th style="width: 20%">
                </th>
            </tr>
        </thead>
          <tbody>
              <tr>
                  <td>
                      <a>
                          <%= @course.title %>
                      </a>
                      <br>
                      <small>
                          <%= @course.created_at %>
                      </small>
                  </td>
                  <td class="project_progress">
                      <div class="progress progress-sm">
                          <div class="progress-bar bg-green" role="progressbar" aria-volumenow="<% percent_success(@course, @users) %>" aria-volumemin="0" aria-volumemax="100" style="width: <%= percent_success(@course, @users) %>%">
                          </div>
                      </div>
                      <small>
                          <%= percent_success(@course, @users) %> %
                      </small>
                  </td>
                  <td class="project-state">
                  </td>
                  <td class="project-actions text-right">
                      <%= link_to course_path, class: "btn btn-primary btn-sm" do %>
                        <i class="fas fa-folder"></i> <%= t('admin.project.view') %>
                      <% end %>
                  </td>
              </tr>
          </tbody>
    </table>
  </div>
</div>
