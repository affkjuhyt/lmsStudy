<div id="show-courses"></div>
  <div class="container">
    <div class="section-title mt-4">
    <h2><%= t('home.categories') %></h2>
  </div>
  <div class="courses">
      <div class="row">
        <% @categories.each do |category| %>
          <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 mb-4">
            <div class="course-item">
              <div class="course-img">
                <%= image_tag category.image_was.to_s %>
              </div>
              <div class="course-content">
                <div class="d-flex mb-3">
                </div>
                <h3>
                  <%= link_to category.name, category %>
                </h3>
                <p>
                  
                </p>
                <div class="course-info d-flex justify-content-between align-items-center">
                  <div class="course-info-icon d-flex align-items-center" id="course-actions">
                    <div class="item-icon">
                      <i class=" fas fa-users fa-2x disable"></i>
                    </div>
                  </div>
                  <div class="course-show d-flex align-items-center">
                    <%= link_to t('category.detail'), category, class: "btn btn-outline-success" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="paginate">
        <%= will_paginate @categories %>
      </div>
    </div>
  </div>
</div>
