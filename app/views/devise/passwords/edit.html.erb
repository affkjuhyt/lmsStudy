<div class="col-md-6 offset-md-3 resend-form">
  <h2><%= t('devise.password.title') %></h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <%= f.input :reset_password_token, as: :hidden %>
    <%= f.full_error :reset_password_token %>

    <div class="form-inputs">
      <%= f.input :password,
                  label: t('devise.password.label_input'),
                  required: true,
                  autofocus: true,
                  hint: (t('devise.shared.minimum_password_length', count: @minimum_password_length) if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  label: t('devise.password.label_reinput'),
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, t('devise.password.title') %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
