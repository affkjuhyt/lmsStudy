<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">

<div class="container">
	<div class="row">
	  <div class="chatbox chatbox22 chatbox--tray">
			<div class="chatbox__title">
				<h5><a href="javascript:void()">Message</a></h5>
				<button class="chatbox__title__close">
					<span>
						<svg viewBox="0 0 12 12" width="12px" height="12px">
								<line stroke="#FFFFFF" x1="11.75" y1="0.25" x2="0.25" y2="11.75"></line>
								<line stroke="#FFFFFF" x1="11.75" y1="11.75" x2="0.25" y2="0.25"></line>
						</svg>
					</span>
				</button>
			</div>
			<% if signed_in? %>
				<div class="chatbox__body">
					<%= render "messages/message" %>
					<div id="new_message"></div>
				</div>
				<div class="panel-footer">
					<%= form_for @message, remote: true, authenticity_token: true do |f| %>
						<div class="input-group">
							<%= f.text_field :body,
															class: "form-control input-lg"%>
							<%= f.hidden_field :user_id, value: current_user.id %>
							<%= f.submit "Send", :class => "input-group-btn"%>
						</div>
					<% end %>
				</div>
			<% else %>
				<%= 'Vui long dang nhap de nhan tin'%>
			<% end %>
    </div>
	</div>    
</div>
